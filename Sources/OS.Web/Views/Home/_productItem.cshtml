@using OS.Business.Domain
@using OS.Common
@model Product

@{
    int categoryId = Model.Categories.First().Id;
}

<div class="os-item col-xs-3 col-lg-3">
    <div class="thumbnail">
        <a href="@Url.Action("Details", "Home", new
                         {
                             productId = @Model.Id,
                             categoryId = categoryId
                         })">

            @Html.Partial("_productListItemImage", Model)
            <div class="caption">
                <h5 class="group inner list-group-item-heading">
                    @Model.Name
                </h5>
                <p class="group inner list-group-item-text">
                    @{
                        string description = Model.Description.Trunc(100);

                        if (description.Length < Model.Description.Length)
                        {
                            description += "...";
                        }
                    }

                    @description
                </p>

                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <b>
                            @Model.Price
                        </b>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <a class="btn btn-success btn-buy-product" href="#" style="display: none" productId="@Model.Id" categoryId="@categoryId" productPrice="@Model.Price">Купити</a>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>