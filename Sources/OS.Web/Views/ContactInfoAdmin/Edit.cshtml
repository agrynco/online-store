@using OS.Web.Models
@model ContactInfoEditViewModel

@{
    Layout = "~/Views/Shared/_adminEditLayout.cshtml";
}

@section editor
{
    @Html.TextAreaFor(m => m.ContactInfo.Content)
}

@section scripts
{
    <script src="~/Scripts/tinymce/js/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinyMCE.init({
            selector: "#@Html.IdFor(m => m.ContactInfo.Content)",
            plugins: "table textcolor",
            height: 500,
            toolbar: "insertfile undo redo | styleselect | forecolor | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | table"
        });
    </script>

}
