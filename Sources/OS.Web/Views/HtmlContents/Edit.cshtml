@using OS.Web.Models.HtmlContentViewModels
@model HtmlContentCreateOrEditViewModel

@{
    Layout = "~/Views/Shared/_adminEditLayout.cshtml";
}

@section editor
{
    <div class="row">
        <div class="col-md-12">
            <section id="category-editor">
                <h4>
                    @if (Model.Id != 0)
                    {
                        <text>
                            Редагування
                        </text>
                    }
                    else
                    {
                        <text>
                            Створення
                        </text>
                    }
                </h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.HtmlContent.Code)
                @Html.HiddenFor(m => m.HtmlContent.Id)
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.TextAreaFor(m => m.HtmlContent.Text, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.HtmlContent.Text, "", new { @class = "text-danger" })
                    </div>
                </div>
                

                
            </section>
        </div>
    </div>
}

@section scripts
{}


