@using OS.Common
@using OS.Web.Models.ProductViewModels
@model ProductListItemViewModel

<div class="os-item col-xs-2 col-lg-2">
    <div class="thumbnail">
        <div>
            <div style="float: right !important; margin: 4px;">
                @Html.ActionLink(" ", "Delete", new
                    {
                        id = Model.Product.Id,
                        categoryId = Model.CategoryId
                    }, new
                        {
                            @class = "glyphicon glyphicon-remove",
                            onclick = "return confirmDelete();"
                        })

            </div>
            <div style="float: right !important; margin: 4px;">
                @Html.ActionLink(" ", "Edit", new
                    {
                        id = Model.Product.Id,
                        categoryId = Model.CategoryId
                    }, new
                        {
                            @class = "glyphicon glyphicon-edit"
                        })
            </div>
        </div>
        @Html.Partial("_productListItemImage", Model.Product)
        <div class="caption">
            <h5 class="group inner list-group-item-heading">
                @Model.Product.Name
            </h5>
            <p class="group inner list-group-item-text">
                @{
                    string description = Model.Product.Description.Trunc(100);

                    if (description.Length < Model.Product.Description.Length)
                    {
                        description += "...";
                    }
                }

                @description
            </p>

            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <b>
                        @Model.Product.Price
                    </b>
                </div>
            </div>
        </div>
    </div>
</div>