@using OS.Business.Domain
@model Product

@{
    string productImageSrc = "http://placehold.it/400x250/000/fff";

    ProductPhoto mainPhoto = Model.Photos.SingleOrDefault(x => x.IsMain);

    mainPhoto = mainPhoto ?? Model.Photos.FirstOrDefault();

    if (mainPhoto != null)
    {
        productImageSrc = Url.Action("GetFileContent", "Files", new
            {
                id = mainPhoto.Id
            });
    }
}

<img class="group list-group-image" src="@productImageSrc" width="160" height="100" alt=""/>