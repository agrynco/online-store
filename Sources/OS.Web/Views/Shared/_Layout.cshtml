<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

@{
    string bodyColor = Request.IsAuthenticated && Request.RequestContext.HttpContext.User.IsInRole("admin") ? "#d6c0c5;" : "lightgray";
}

<body style="background-color: @bodyColor">

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@RenderBody()

@RenderSection("scripts")

<script>
    document.getElementById("browserInfo").innerHTML = navigator.userAgent;
</script>
</body>
</html>