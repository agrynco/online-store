@using OS.Web.Controllers
@model VerticalCategorySelectorItemViewModel
@{
    string itemClasses = "";
    if (Model.Selected)
    {
        itemClasses += " selected";
    }
}
@Html.ActionLink(Model.Name, "Index", "Home", new
    {
        parentCategoryId = Model.Id
    }, new
        {
            @class = itemClasses
        })
    