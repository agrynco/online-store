@using OS.Web.Controllers
@model VerticalCategorySelectorItemViewModel
@{
    string itemClasses = "";
    if (Model.Selected)
    {
        itemClasses += " selected";
    }

}
@Html.ActionLink(Model.Name, "ChangeCategory", "Home", new
{
    categoryId = Model.Id
}, new
{
    @class = itemClasses
})
    