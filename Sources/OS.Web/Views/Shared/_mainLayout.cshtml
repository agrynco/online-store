@using OS.Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table class="full-size" border="1">
        @RenderSection("topSection", false)
        <tbody>
            <tr>
                <td></td>
                <td style="background: white">
                    @RenderSection("content")
                </td>
                <td></td>
            </tr>
        </tbody>
        <tfoot>
            <tr class="min-height">
                <td></td>
                <td style="background: whitesmoke; width: 768px">Environment: @ApplicationSettings.Instance.AppSettings.Environment</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
