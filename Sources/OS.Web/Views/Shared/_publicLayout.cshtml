@using OS.Configuration
@{
    Layout = "_layout.cshtml";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(ApplicationSettings.Instance.AppSettings.ApplicationName, "Index", "Home",
                new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse row">
            <ul class="nav navbar-nav navbar-left">
                <li>@Html.ActionLink("Головна", "Index", "Products")</li>
                <li>@Html.ActionLink("Контакти", "Index", "ContactInfo")</li>
                <li>@Html.ActionLink("Про магазин", "Index", "About")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <form class="navbar-form" role="search">
                        <div class="input-group" style="width: 250px;">
                            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                            <span class="input-group-btn">
                                <button class="btn btn-danger" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </form>
                </li>
                @Html.Partial("_loginPartial")
                <li>@Html.Partial("_consumerBasket")</li>
            </ul>
        </div>
    </div>
</div>

<div class="container table-container wrapper">
    <div class="row table-row">
        <div class="col-md-3 table-col" style="background: #eeeeee; padding-left: 0; padding-right: 0">
            @Html.Partial("_verticalCategorySelector")
        </div>
        <div class="col-md-6 table-col" style="background: white">
            @RenderBody()
        </div>
        <div class="col-md-3 table-col" style="background: #eeeeee"></div>
    </div>
    <div class="push">
    </div>
</div>
<div class="footer container">
    <hr/>
    <p></p>
    <p>&copy; @DateTime.Now.Year - @ApplicationSettings.Instance.AppSettings.ApplicationName</p>
    <p>
        <b>Environment:</b> @ApplicationSettings.Instance.AppSettings.Environment
    </p>
    <p>
        <span>
            <b>Client:</b>
        </span>
        <span id="browserInfo"></span>
    </p>
</div>

@section scripts
{
    <script>
        document.getElementById("browserInfo").innerHTML = navigator.userAgent;
    </script>

    @RenderSection("scripts")
}
