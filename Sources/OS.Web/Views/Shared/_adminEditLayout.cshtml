@{
    Layout = "_adminLayout.cshtml";
}

@section content
{
    @{
        string currentControllerName = (string) ViewContext.RouteData.Values[Constants.RouteDataKeys.CONTROLLER];
    }


    @using (Html.BeginForm("Save", currentControllerName, ViewContext.RouteData.Values, FormMethod.Post, new
    {
        @class = "form-horizontal", 
        role = "form"
    }))
    {
        @RenderSection("editor")

            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <input type="submit" value="Зберегти" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }
}
