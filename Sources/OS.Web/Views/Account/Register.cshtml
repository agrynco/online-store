@using OS.Web.Models
@model RegisterViewModel
@{
    PageData[Constants.PageData.PAGE_TITLE] = "Реєстрація";
    Layout = "~/Views/Shared/_accountLayout.cshtml";
}

@section accountFormContent
{
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <table>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Email, new {@class = "control-title"})
                </td>
                <td style="width: 150px">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                </td>
            </tr>
            <tr class="row-space">
                <td colspan="2"></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Password, new {@class = "control-title"})
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </td>
            </tr>
            <tr class="row-space">
                <td colspan="2"></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-title"})
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </td>
            </tr>
            <tr class="row-space">
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" class="btn btn-default" value="Зареєструватися" />    
                </td>
            </tr>
        </table>
    }
}